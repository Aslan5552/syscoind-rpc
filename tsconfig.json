{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    /* because libs is outside of src */
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noStrictGenericChecks": true,
    "noImplicitUseStrict": true,
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "_tests_"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "debug": false
  },
  "compileOnSave": false,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}